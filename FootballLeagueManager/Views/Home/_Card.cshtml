@using FootballLeagueManager.Models.ViewModels.Home

@model LeagueViewModel

<div class="col-xs-12 col-md-3 col-sm-6 feature">
    <div class="image-flip" ontouchstart="this.classList.toggle('hover');">
        <div class="mainflip">
            <div class="frontside">
                <div class="card">
                    <div class="card-body text-center">
                        <p>
                            <img class="img-fluid" alt="@Model.League.Name" src="@Model.League.ImageUrl"/>
                        </p>
                        <h4 class="card-title">@Model.League.Name</h4>
                    </div>
                </div>
            </div>
            <div class="backside">
                <div class="card">
                    <div class="card-body text-center mt-4">

                        <label class="mt-3" for="@Model.SeasonTagId">Wybierz sezon</label>
                        <select class="m-2 text-center" name="@Model.SeasonTagId" id="@Model.SeasonTagId">
                            @Model.RenderSeasons
                        </select>

                        <ul class="list-inline mt-4">
                            <li class="list-inline-item">
                                <a id="@("league-" + Model.League.Id)" class="btn btn-outline-primary feature">Przeglądaj</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
